{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "types": ["node", "webdriverio/sync", "@wdio/cucumber-framework", "expect-webdriverio"],
    "rootDir": "src",
    "outDir": "build",
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "exclude": [
    "react-native.config.js",
    "__tests__",
    "node_modules",
    "e2e",
    "wdio.conf.ts",
    "emulator.conf.ts",
    "emulatorios.conf.ts",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "tsconfig.js",
    "tsconfig.json",
    "index.js",
    "app.js"
  ]
}
